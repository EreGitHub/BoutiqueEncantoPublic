@model Venta.Models.Dto.LoginUsuarioDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
    <link href="~/Content/LoginResourse/css/style.css" rel="stylesheet" />
    <title>Encantó Boutique</title>
</head>
<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                <form action="@Url.Action("Validar","Home")" method="post" class="sign-in-form">
                    <p style="background-color:#DC5B27; color:white;text-align:center" class="field-validation-error center">@Html.DisplayFor(model => model.LoginErrorMessage)</p>
                    <h2 class="title">Sign in</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" name="Login" placeholder="Username" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" name="Contraseña" placeholder="Password" />
                    </div>
                    <input type="submit" value="Login" class="btn solid" />
                    <p class="social-text">Social platforms</p>
                    <div class="social-media">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-google"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </form>                
                <form action="#" class="sign-up-form">
                    <h2 class="title">Encantó Boutique</h2>
                    <img src="~/Content/LoginResourse/img/order_confirmed.svg" class="image" alt="">

                </form>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h1 class="title">Encantó Boutique</h1>
                    <p style="color: black;">
                        Joyas, ropa, accesorios, lencería y maquillaje para damas
                    </p>
                    <button class="btn transparent" id="sign-up-btn">
                        Info
                    </button>
                </div>
                <img src="~/Content/LoginResourse/img/login.svg" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3 class="title">Direccion</h3>
                    <p style="color: black;">
                        Av. Font entre Belgrano y Héroes del Chaco Tarija, Bolivia
                    </p>
                    <button class="btn transparent" id="sign-in-btn">
                        Login
                    </button>
                </div>
                <img src="~/Content/LoginResourse/img/registro.svg" class="image" alt="" />
            </div>
        </div>
    </div>

    <script src="~/Content/LoginResourse/js/app.js"></script>
    <script>
        if ('@ViewBag.Status' != "") {
            toastr.error('@ViewBag.Status')
            console.log('@ViewBag.Status')
        }
    </script>
</body>
</html>














